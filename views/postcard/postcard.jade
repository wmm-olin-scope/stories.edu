script(src='/javascripts/lib/typeahead.bundle.min.js')
script(src='/javascripts/postcard.js')

.row
    .col-md-8.col-md-offset-2.col-sm-12.col-xs-12
        .hidden-sm.hidden-md.hidden-lg
            h5 
                strong 1. Write a note...
        .well.postcard-container
            .col-md-7.col-sm-7.col-xs-12.content
                #spacer
                span.text-content 
                    | I want to thank 
                    input(id='teacher_name' class="editable small" placeholder="Ms. Frizzle")
                    |  for being an amazing  
                    input(id='teacher_role' class="editable small" placeholder="third grade teacher")
                    | . 
                    br
                    br
                    textarea(id='freetext' placeholder="I learned more in my third grade class than in any other class in elementary school. Ms. Frizzle's unconventional approach -- giving us hands on experience with the material -- helped cement what she was trying to teach in my mind. I never had to study for a test in her class, I was learning through fun experiences.")
                    br
                    br
                    .row
                        .col-md-5.col-sm-5.col-xs-3
                            button.btn.btn-default.hidden-xs#video_button(type='button')
                                i.fa.fa-3x.fa-youtube-square 
                                br
                                | Include an optional
                                br
                                | video message
                        .col-md-7.col-sm-7.col-xs-9.pull-right
                            span#signature
                                p.pull-right
                                    | Thanks for your hard work!
                                input(id='author_name' class="editable pull-right signature" placeholder="Arnold Perlstein")
                                input(id='author_role' class="editable pull-right signature" placeholder="In your 2008 Third Grade Class")
            .col-md-5.col-sm-5.address.col-xs-5.hidden-xs
                .row
                    .col-md-9.col-sm-9.col-xs-5
                        #return_address(style="font-size: 14px")
                            input.underline.full-width(placeholder="Arnold Perlstein")#return_name
                            input.underline.full-width(placeholder="Arnold.Perlstein@gmail.com")#return_email
                    .col-md-3.col-sm-3.col-xs-3.hidden-xs
                        #stamp_div.pull-right
                            img.img-thumbnail.pull-right(src='http://placehold.it/80x100')
                .row
                    .col-md-12.col-sm-12.col-xs-12
                        #address_well
                            input.underline.full-width#mailto_name(placeholder='Ms. Frizzle')
                            input.underline.full-width#mailto_role(placeholder='2008 Third Grade Class')
                            input.underline.full-width#mailto_school(placeholder='Walkerville Elementary School')
                            input.underline.full-width#mailto_street(placeholder='11400 South Lakes Dr.')
                            input.underline.full-width#mailto_city_state(placeholder='Reston, VA 20191')
.row.hidden-sm.hidden-md.hidden-lg
    .col-xs-12
        h5
            strong 2. Include an optional video message...
        center
            button.btn.btn-default#video_button(type='button')
                i.fa.fa-3x.fa-youtube-square 
                br
                | Include an optional video message
        br

.row.hidden-sm.hidden-md.hidden-lg
    .col-xs-12
        h5
            strong 3. Address the note...
        .well.envolope-container
            .col-xs-12.content
                .row
                    .col-xs-9
                        #return_address(style="font-size: 14px")
                            input.underline.full-width(placeholder="Arnold Perlstein")#return_name
                            br
                            input.underline.full-width(placeholder="Arnold@gmail.com")#return_email
                    .col-xs-3
                        img.pull-right(src='http://placehold.it/40x60' style="margin-right: -25px; margin-top: -10px;")
                .row
                    .col-md-12.col-sm-12.col-xs-10.col-xs-offset-1(style="padding-top: 70px; padding-bottom: 20px")
                            input.underline.full-width#mailto_name(placeholder='Ms. Frizzle')
                            input.underline.full-width#mailto_role(placeholder='2008 Third Grade Class')
                            input.underline.full-width#mailto_school(placeholder='Walkerville Elementary School')
                            input.underline.full-width#mailto_street(placeholder='11400 South Lakes Dr.')
                            input.underline.full-width#mailto_city_state(placeholder='Reston, VA 20191')
        
