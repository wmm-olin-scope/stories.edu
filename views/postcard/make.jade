extends ../layout

block content
    script(src='/javascripts/make-postcard.js')
    
    #make-postcard
        .container
            h2#prompt Help us send a note to a teacher, coach, or mentor!
            #story-panel
                .progress#progress
                    .progress-bar(role='progressbar', aria-valuenow=25, aria-valuemin=0, aria-valuemax=100, style='width: 25%')
                        span#progress-label Step 1 of 4
                br
                #question-container
                    #question-wrapper
                        #who-question-form
                            .row.row-center-vert.question-form
                                .col-sm-4.col-sm-offset-1.col-center-vert
                                    .question-label(style='float:right')
                                        label.text-right(for='answer') Who do you want to thank?
                                .col-sm-4.col-center-vert
                                    input.answer.form-control(type='text', placeholder='Mrs. Smith', maxlength=32)
                                .col-sm-2.col-center-vert
                                    button.btn.btn-success.btn-next Next
                            br
                            .row
                                p.question-text We'll ask you to describe a scene or moment in your life that stands out as a significant interaction with them.

                        #when-question-form.row.row-center-vert.question-form(style="display:none;")
                            //.row
                                p.question-text Tell us a little more about them.
                            //br
                            .row.row-center-vert.question-form
                                .col-sm-4.col-sm-offset-1.col-center-vert
                                    .question-label(style='float:right')
                                        label.text-right(for='where') Where did they work?
                                .col-sm-4.col-center-vert
                                    input.answer.form-control(type='text', placeholder='Where', maxlength=32)
                            .row.row-center-vert.question-form
                                .col-sm-4.col-sm-offset-1.col-center-vert
                                    .question-label(style='float:right')
                                        label.text-right(for='when') And when?
                                .col-sm-4.col-center-vert
                                    input.answer.form-control(type='text', placeholder='1999', maxlength=32)
                                .col-sm-2.col-center-vert
                                    button.btn.btn-success.btn-next Next

