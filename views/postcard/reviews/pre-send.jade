#review-notice.row.blue-panel
    .row.row-center-vert
        .col-sm-10.col-center-vert
            span Thanks for your note! We have received it, but won't send it just yet. We're still putting the finishing touches on the site!
        .col-sm-1.col-center-vert
            button#done.btn.btn-find.button-orange Done!
br
.row
    .col-xs-12
        style | body { min-width: 768px !important; }

        .col-md-8.col-md-offset-2.col-sm-12.col-xs-12
            .well.postcard-container
                .col-xs-7.content
                    #spacer
                    span.text-content.black-text
                        span(style='padding-right: 0.3em;') Dear 
                        span#who 
                        br
                        br
                        p#what
                        br
                        br
                        .row
                            .col-xs-7.pull-right
                                span#signature
                                    p.pull-right Thank you for your hard work,
                                    #name.pull-right.signature 

                .col-xs-5.address
                    .row
                        .col-xs-9
                            #return_address(style="font-size: 14px").black-text
                                #name.full-width
                                #email.answer.full-width
                        .col-xs-3
                            #stamp_div.pull-right
                                img.pull-right.img-thumbnail(src='/images/square-logo.png' height="100px" width="80px" style="background-color: #133783")
                    .row
                        .col-xs-12
                            .address-well
                                #addressee Teacher
                                #schoolName Walkerville Elementary School
                                #schoolAddress 11400 South Lakes Dr.
                                #schoolCityStateZip Reston, VA 20191

.row
    .col-xs-12.full-width-center
        h2 Help us spread the word! Encourage your friends to thank more teachers.
.row
    .col-xs-12
        center
            .form-inline(style='margin-right:10px;')
                .btn-group#postcard-share
                    a.btn.btn-lg.btn-twitter.share-twitter.share
                        i.fa.fa-twitter
                        | &nbsp; Tweet
                    a.btn.btn-lg.btn-facebook.share-facebook.share
                        i.fa.fa-facebook
                        | &nbsp; Post
                    a.btn.btn-lg.btn-google-plus.share-google-plus.share
