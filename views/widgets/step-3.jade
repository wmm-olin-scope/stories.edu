extends step

block step-content
    +step-number(3)
    form(role='form')
        fieldset
            legend.teacher-name
            .row
                .col-xs-12
                    textarea.js-note-field.form-control.text-input-format(rows='3', name='note', placeholder='Your Note')
        fieldset
            legend.step-alternative Want to include a personalized video message? Paste a YouTube link here &nbsp;
            .row
                .col-xs-12
                    input.js-video-field.form-control.text-input-format(type='text', name='video', placeholder='YouTube link')
        fieldset
            .row: .col-xs-12
                button#send-note.js-btn-next.btn.btn-default.btn-cta.ladda-button(type='button', disabled, data-style='expand-right', data-size='l')
                    span.ladda-label Send Note
