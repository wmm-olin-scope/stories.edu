extends step

block step-content
    +step-number(1)
    form(role='form')
        fieldset
            .row
                .col-sm-12
                    legend Who do you want to thank?
            .row
                .col-xs-12
                    input.js-teacher-field.form-control.text-input-format(type='text', name='teacher-name', placeholder='Name of teacher, coach, or mentor')
        fieldset
            .row
                .col-sm-12.no-bottom
                    legend What is your name and email address?
                        span.substep-explanation (so we can add them to your note)
            .row
                .col-xs-6
                    input.js-name-field.form-control.text-input-format(type='text', name='name', placeholder='Your Name')
                .col-xs-6
                    input.js-email-field.form-control.text-input-format(type='email', name='email', placeholder='Your Email')
        fieldset
            .row
                .col-xs-12
                    +next-button('Next Step')