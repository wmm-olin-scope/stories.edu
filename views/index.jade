extends layout

block scripts
    script(src=static('javascripts/index.js'))

block content
    .container.background-outside-container
        .row.background-container
            #make-postcard
                row
                    .col-xs-12.col-sm-7.col-md-6.col-lg-5.col-lg-offset-1
                        #step-container
                            #step-1
                                include widgets/step-1
                            #step-2.hidden
                                include widgets/step-2
                            #step-3.hidden
                                include widgets/step-3
                    .col-xs-12.col-sm-5.col-md-6.col-lg-5.about-column
                        include widgets/about
                row
                    .col-xs-12.col-sm-offset-2.col-sm-5.col-md-4.col-md-offset-3.col-lg-offset-4
                        img(src='images/TextAndArrow.png')
            #show-postcard.hidden
                include widgets/postcard-with-share
    #secondary-content
        include widgets/how-it-works
        include widgets/sample-notes
        .container
            .share-btn-container.js-share-buttons
                include widgets/share-button-row
